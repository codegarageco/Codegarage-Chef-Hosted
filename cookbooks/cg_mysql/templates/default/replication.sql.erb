-- Generated by Chef for <%= node["hostname"] %>.
-- Local modifications will be overwritten.

GRANT REPLICATION SLAVE ON *.* TO '<%= node["cg_mysql"]["replication"]["username"] %>'@'%'
      IDENTIFIED BY '<%= node["cg_mysql"]["replication"]["password"] %>';
FLUSH PRIVILEGES;

<% unless node["cg_mysql"]["replication"]["host"].empty? %>
CHANGE MASTER TO
  MASTER_HOST='<%= node["cg_mysql"]["replication"]["host"] %>',
  MASTER_PORT=<%= node["cg_mysql"]["replication"]["port"] %>,
  MASTER_USER='<%= node["cg_mysql"]["replication"]["username"] %>',
  MASTER_PASSWORD='<%= node["cg_mysql"]["replication"]["password"] %>';
START SLAVE;
<% end %>
